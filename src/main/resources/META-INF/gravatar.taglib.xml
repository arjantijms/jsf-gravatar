<?xml version="1.0" encoding="UTF-8"?>
<facelet-taglib xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facelettaglibrary_2_0.xsd" version="2.0">
	<namespace>http://www.gravatar.com/avatar</namespace>
	
	<tag>
		<tag-name>avatar</tag-name>
		<component>
			<component-type>de.proskor.gravatar.Gravatar</component-type>
			<renderer-type>de.proskor.gravatar.GravatarRenderer</renderer-type>
		</component>
		<attribute>
			<description>Email</description>
            <name>email</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
			<description>Size</description>
            <name>size</name>
            <required>false</required>
            <type>java.lang.Integer</type>
        </attribute>
        <attribute>
			<description>Default</description>
            <name>default</name>
            <required>false</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
			<description>Deferred loading</description>
            <name>deferred</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
        </attribute>
	</tag>
	
</facelet-taglib>
